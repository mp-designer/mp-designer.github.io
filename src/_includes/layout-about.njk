{% from "components/button.njk" import button %}
<!DOCTYPE html>
<html lang="en">
  <head>
    {% set metaDescription = description %}
    {% include "head.njk" %}
  </head>
  <body>
    <div class="text-grey5 text-bodyS md:text-bodyM bg-slate-100 min-h-screen flex flex-col">
      {% include "header.njk" %}

      <main class="container flex-grow">
        <div class="pt-6 pb-16 md:pt-20 md:pb-[7.5rem] lg:pb-40 grid grid-cols-1 lg:grid-cols-[24rem_auto] gap-6">
          <div class="">
            <h1 class="mb-10 text-grey6 font-sans-heading text-hL md:text-hXL uppercase">{{ title }}</h1>
            <div class="overflow-hidden rounded-[50%] w-full max-w-[25rem] md:max-w-[19.0625rem] aspect-square">
              <img src="{{ imgSrc }}" class="w-full h-full object-cover"/>
            </div>
          </div>
          <div>
            <div class="mb-9 lg:pt-4">
              {{ content | safe }}
            </div>

            {{ button(tag="a", variant="secondary", iconBefore="/assets/icons/download-24px.svg", attrs={
              href: cvUrl,
              target: "_blank",
              download: "cv"
            }, text="Download CV" )}}
          </div>
        </div>
      </main>

      {% include "footer.njk" %}
    </div>
  </body>
</html>
